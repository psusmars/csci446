<h3>...with a name .com hipsters love!</h3>

<h2>All the World's Articles</h2>
<%= link_to(image_tag('page_add.png'), new_article_path, title: "To 'Article Creation' Screen")%><%= link_to('Create an Article', new_article_path, title: "To 'Article Creation' Screen")%>
<div class="table_div">
  <table id="encapsulating_table">
    <tr>
      <td>
        <table id="article_table">
          <tr class="interior_row_header" id="article_table_header">
            <th>Title</th>
            <th>Author</th>
            <th>Body</th>
            <th>Creation Date</th>
          </tr>

          <% @articles.each do |article| %>
          <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
            <td><%= article.title %></td>
            <td><%= article.author %></td>
            <td><%= truncate(strip_tags(article.body), length: 42) %></td>
            <td><%= article.created_at.strftime("%A, %b. %d %Y") %></td>
          </tr>
          <% end %>
				</table>
      </td>
      <td>
        <table>
          <tr class="interior_row_header">
            <th></th>
          </tr>
          <% @articles.each do |article| %>
          <tr class="interior_row">
            <td class="button_column">
              <%= link_to image_tag('page_view.png'), article, title: "View Article" %>
              <%= link_to image_tag('page_edit.png'), edit_article_path(article), title: "Edit Article" %>
              <%= link_to image_tag('page_delete.png'), article, confirm: 'Are you sure?', method: :delete, title: "Delete Article" %>
            </td>
          </tr>
          <% end %>
        </table>
      </td>
    </tr>
  </table>
</div>
</div>
<br />
<p>
  <% if (@articles.size == 1) %>
  <%= @articles.size %> article.
  <% else %>
  <%= @articles.size %> articles.
  <% end %>
</p>
