//Transitions out an empty cart with item that is added
if ($('#cart tr').length == 1) { $('#cart').show('blind', 1000); }

//Says to replace the content of the element id=cart with the html
$('#cart').html("<%=j render @cart %>");

//Animates the background of the element with id=current_item
$('#current_item').css({'background-color':'#88ff88'}).
	animate({'background-color':'#114411'}, 1000);