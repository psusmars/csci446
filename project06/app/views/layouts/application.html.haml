!!!
%html
  %head
    %title Gamez
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #user_nav
      - if current_user
        = link_to "Edit Profile", edit_user_path(:id)
        |
        \#{link_to "Logout", logout_path, :method => :destroy}
      - else
        = link_to "Register", new_user_path
        |
        \#{link_to "Login", login_path}
    = yield
