= conent_for :user_nav
  Logged in as 
  \#{link_to get_first_and_last_name_string(current_user), admin_edit_user_path(:id)},
  =current_user.role.name + "."
  =link_to "My Games", admin_root_url
    \#{link_to "Logout", logout_path, :method => :destroy}
%h2 Listing games
= pluralize(@games_count, "Total Game")
= link_to "Add a game", new_game_path
= will_paginate @games
%table.index_table
  %thead
    %tr
      %th Title
      %th Rating
      %th Date Added
  %tbody
  - @games.each do |game|
    %tr
      %td= link_to game.title, edit_game_path(game)
      %td= game.rating
      %td
        = game.created_at.strftime("%b. %d %Y")
        by
        - if current_user != nil and current_user.id == game.user_id
          me
        - else
          = link_to get_first_and_last_name_string(game.user), edit_admin_user_path(game.user)
%br/
